      script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js" type="text/javascript")
      script(src="js/index.js" type="text/javascript")








mixin rimg(title, desc, img)
  .row
    .col-md-7
      h3.featurette-heading=title
      p.lead !{desc}
    .col-md-5: .sv-img.pull-right: img.featurette-image.img-responsive(src=img alt="400x400")
mixin limg(title, desc, img)
  .row
    .col-md-5: .sv-img.pull-left: img.featurette-image.img-responsive(src=img alt="400x400")
    .col-md-7
      h3.featurette-heading=title
      p.lead !{desc}


mixin img-modal(id, src)
  .modal.fade(id=id tabindex="-1" role="dialog" aria-hidden="true")
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button" data-dismiss="modal" aria-label="Close")
            span(aria-hidden="true") &#215;
        .modal-body
          img(src=src)

