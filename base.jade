      meta(charset="utf-8")
      meta(http-equiv="X-UA-Compatible" content="IE=edge")
      meta(name="viewport" content="width=device-width, initial-scale=1")
      meta(name="description" content="AZEmbroidMe is a Scottsdale-based embroider that creates cost-effective, high-quality embroideries.")
      meta(name="keywords" content="embroidme, azembroidme, embroidery, embroider, embroid, scottsdale, quality, monogramming, business cards, branding, artwork, logo, digitizing, brochures, clothes, clothing")
